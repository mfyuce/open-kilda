<Configuration status="WARN">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %-5p %c{1}:%L - %m%n"/>
        </Console>
        <File name="SkippedTestsFile" fileName="build/logs/skipped_tests.log" append="false">
            <PatternLayout pattern="%m%n%n"/>
        </File>
{{if eq (getv "/kilda_environment_role") "local"}}
        <Routing name="LogstashRouting">
            <Routes pattern="$${ctx:test_name}">
                <Route>
					<Socket name="Logstash" host="{{ getv "/kilda_tests_logging_logstash_host" }}" port="{{ getv "/kilda_logging_port_tests" }}">
                        <JsonLayout compact="true" eventEol="true" properties="true">
                            <KeyValuePair key="test_name" value="${ctx:test_name:-none}"/>
                        </JsonLayout>
                    </Socket>
                </Route>
            </Routes>
        </Routing>
{{end}}
        <Routing name="FileRouting">
            <Routes pattern="$${ctx:test_name}">
                <Route>
                    <File name="TestsSpecLog" fileName="build/logs/${ctx:test_name:-common}.log">
                        <PatternLayout pattern="%d{ISO8601} %-5p %c{1}:%L - %m%n"/>
                    </File>
                </Route>
            </Routes>
        </Routing>
        <Routing name="RequestsFileRouting">
            <Routes pattern="$${ctx:test_name}">
                <Route>
                    <File name="TestsSpecLog" fileName="build/logs/${ctx:test_name:-common}_requests.log">
                        <PatternLayout pattern="%d{ISO8601} %-5p %c{1}:%L - %m%n"/>
                    </File>
                </Route>
            </Routes>
        </Routing>
    </Appenders>
    <Loggers>
        <Logger name="org.openkilda.functionaltests" level="DEBUG" additivity="false">
{{if eq (getv "/kilda_environment_role") "local"}}
            <AppenderRef ref="LogstashRouting" level="DEBUG"/>
{{end}}
            <AppenderRef ref="FileRouting" level="DEBUG"/>
            <AppenderRef ref="STDOUT" level="INFO"/>
        </Logger>
        <Logger name="org.openkilda.testing.tools.LoggingRequestInterceptor" level="DEBUG" additivity="false">
            <AppenderRef ref="RequestsFileRouting" level="DEBUG"/>
{{if eq (getv "/kilda_environment_role") "local"}}
            <AppenderRef ref="LogstashRouting" level="DEBUG"/>
{{end}}
        </Logger>
        <Logger name="org.openkilda.functionaltests.extension.SkippedTestsLogger" level="DEBUG" additivity="true">
            <AppenderRef ref="SkippedTestsFile" level="DEBUG"/>
        </Logger>
        <Root>
            <AppenderRef ref="STDOUT" level="ERROR"/>
        </Root>
    </Loggers>
</Configuration>
